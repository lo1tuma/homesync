{
    "name": "homesync",
    "version": "0.1.0",
    "description": "Keep your dotfiles in sync.",
    "main": "lib/homesync.js",
    "bin": "lib/cli.js",
    "scripts": {
        "test": "npm run lint && npm run unit-test",
        "unit-test": "istanbul test --dir build/coverage _mocha test -- --recursive --reporter spec",
        "lint": "jscs . --reporter console && eslint .",
        "report-coverage-html": "istanbul report --dir  build/coverage html",
        "coverage": "npm test --coverage && npm run report-coverage-html"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lo1tuma/homesync.git"
    },
    "dependencies": {
        "bluebird": "~2.3.10",
        "homedir": "~0.3.0",
        "ignore": "~2.2.14",
        "commander": "~2.5.0"
    },
    "devDependencies": {
        "eslint": "0.9.2",
        "jscs": "1.7.3",
        "mocha": "2.0.1",
        "sinon": "1.11.1",
        "referee": "1.1.0",
        "referee-sinon": "1.0.2",
        "istanbul": "0.3.2",
        "proxyquire": "1.0.1"
    },
    "engines" : {
        "node": ">=0.10"
    },
    "keywords": [
        "dotfiles",
        "home",
        "sync"
    ],
    "author": "Mathias Schreck <schreck.mathias@gmail.com>",
    "license": "beerware"
}
